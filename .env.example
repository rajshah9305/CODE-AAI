# AI Provider API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GROQ_API_KEY=your-groq-api-key-here
SAMBANOVA_API_KEY=your-sambanova-api-key-here
CEREBRAS_API_KEY=your-cerebras-api-key-here

# Application Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=http://localhost:3000
NODE_ENV=development

# Database Configuration (Optional - for user sessions and chat history)
DATABASE_URL="postgresql://username:password@localhost:5432/ai_coding_assistant"

# Optional: Analytics & Monitoring
VERCEL_ANALYTICS_ID=your-vercel-analytics-id
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Optional: Rate Limiting (Redis for production)
REDIS_URL=your-redis-url-for-rate-limiting

# Optional: File Storage (for code file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Optional: Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Security
ENCRYPTION_KEY=your-32-character-encryption-key

# Feature Flags
ENABLE_FILE_UPLOAD=true
ENABLE_CODE_EXECUTION=true
ENABLE_COLLABORATION=false
ENABLE_PREMIUM_FEATURES=false

# API Rate Limits (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Model Configuration
DEFAULT_AI_PROVIDER=openai
DEFAULT_MODEL=gpt-4-turbo-preview
MAX_TOKENS=4000
TEMPERATURE=0.7

# UI Configuration
THEME=system
ENABLE_DARK_MODE=true
DEFAULT_LANGUAGE=typescript
